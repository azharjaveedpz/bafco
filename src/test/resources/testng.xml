<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.1.dtd">
<suite name="Web Test Suite">

    <listeners>
        <listener class-name="com.robust.utils.RetryListener"/> <!-- for dynamic retry -->
    </listeners>

    <test name="Web Smoke Tests">
        <classes>
            <class name="com.robust.tests.web.HomeTests">
                <methods>
                    <include name="verifyHomePageLoaded"/>
                    <include name="verifyLoginPageLoaded"/>
                </methods>
            </class>

            <class name="com.robust.tests.web.LoginTests">
                <methods>
                    <include name="verifyLoginPageLoaded"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>
